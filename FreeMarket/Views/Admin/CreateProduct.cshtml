@using FreeMarket.Models
@model Product
@{
    ViewBag.Title = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center"><span class="glyphicon glyphicon-edit text-success"></span>&nbsp;Create Product</h2>
<hr />

<div id="parent" class="container center_div">

    @if (Model != null)
    {
        using (Html.BeginForm("CreateProductProcess", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form", @id = "productForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="well well-modal">
                @Html.Partial("_ProductPartial", Model)

                <hr />

                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" class="btn btn-info" value="Create" />
                        @Html.ActionLink("Back", "ProductsIndex", "Admin", new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        }
}

</div>

@Html.Partial("_ValidateProductPartial")