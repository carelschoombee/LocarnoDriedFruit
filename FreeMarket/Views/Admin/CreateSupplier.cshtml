@using FreeMarket.Models
@model Supplier
@{
    ViewBag.Title = "Create Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center"><span class="glyphicon glyphicon-edit text-success"></span>&nbsp;Create Supplier</h2>
<hr />

<div id="parentCreateSupplier" class="container center_div">

    @if (Model != null)
    {
        using (Html.BeginForm("CreateSupplierProcess", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "supplierForm" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="well well-modal">
                @Html.Partial("_SupplierPartial", Model)

                <hr />

                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" class="btn btn-info" value="Update" />
                        @Html.ActionLink("Back", "SuppliersIndex", "Admin", new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        }
}

</div>

<script type="text/javascript">

(function ($) {
        var $window = $(window),
            $html = $('#parentCreateSupplier');

        function resize() {
            if ($window.width() > 600) {
                return $html.addClass('center_div');
            }

            $html.removeClass('center_div');
        }

        $window
            .resize(resize)
            .trigger('resize');
})(jQuery);

</script>

@Html.Partial("_ValidateSupplierPartial")