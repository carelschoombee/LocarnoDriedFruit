@using FreeMarket.Models
@model List<Department>
@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center"><span class="glyphicon glyphicon-edit text-success"></span>&nbsp;Departments</h2>
<hr />

<br />

@if (Model != null && Model.Count > 0)
{
    @Html.ActionLink("Create New", "CreateDepartment", null, new { @class = "freemarket-link" })

    <table class="table table-bordered-custom table-responsive">

        <tr>
            <th class="col-sm-1">Edit</th>
            <th class="col-sm-1">Department Number</th>
            <th class="col-sm-1">Department Name</th>
            <th class="col-sm-1">Image</th>
            <th class="col-sm-1">Active</th>
        </tr>

    @foreach (Department item in Model)
    {
        <tr class="well">
            <td class="text-center">
                @Html.ActionLink("Edit", "EditDepartment", new { departmentNumber = item.DepartmentNumber }, new { @class = "freemarket-link" })
            </td>
            <td>
                @item.DepartmentNumber
            </td>
            <td>
                @item.DepartmentName
            </td>
            <td>
                <img width="256" height="192" class="img-thumbnail" src="@Url.Action("RenderDepartmentImage", "Image", new { id = item.MainImageNumber})" alt="@item.DepartmentName" title="@item.DepartmentName" />
            </td>
            <td>
                @item.Activated
            </td>
        </tr>
    }
            
    </table>

    <div class="text-center">
        @Html.ActionLink("Back", "Index", "Admin", new { @class = "btn btn-success" })
    </div>
}





