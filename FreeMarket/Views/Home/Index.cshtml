@using FreeMarket.Models
@model WelcomeViewModel

@{
    ViewBag.Title = "Locarno Sun Dried Fruit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="parent" class="center_div container">
    <div class="row">
        <h1 class="text-center">Welcome</h1>
        <hr />
    </div>
    <div class="row">
        @Html.Partial("_ProductCarousel")
    </div>
    <div class="row well">

        @Html.Raw(Model.WelcomeText)
        
    </div>
    <div class="row well text-center">

        We offer the following payment options:
        @Html.Partial("_PaymentOptions")
        
    </div>
    
    <div class="row text-center">
        <a class="btn btn-success" href="@Url.Action("Departments", "Product")"><span class="glyphicon glyphicon-shopping-cart">&nbsp;&nbsp;Start Shopping!</span></a>
    </div>
    <div class="row">
        &nbsp;
    </div>
   
</div>

<script type="text/javascript">

$(document).ready(function(){

     $("#myCarousel").carousel({

         interval : 5000

     });

});

$(document).ready(function()
{
    if (navigator.appName == "Opera")
    {
        $('#EditModal').removeClass('fade');
    }
});

</script>