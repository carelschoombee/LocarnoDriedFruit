@{
    ViewBag.Title = "Privacy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="parentPrivacy" class="center_div container">
    <div class="col-sm-12">
        <div class="row">
            <h1 class="text-center">Privacy</h1>
            <hr />
        </div>
        <div class="row text-center">
            <a href="https://www.smartweb.co.za/comodo-ssl-certificates.php">
                <img src="~/Content/Images/comodo-seal.png" class="img-rounded img-thumbnail" alt="Comodo SSL" />
            </a>
        </div>
        <div class="row well">
            <div class="text-center">
                We take your internet privacy seriously. This site is encrypted with a Comodo SSL (Secure Socket Layer) Certificate which ensures that your personal information remains confidential.
            </div>
        </div>

        <div class="col-md-offset-4 row">
            <a class="btn btn-success" href="@Url.Action("Departments", "Product")"><span class="glyphicon glyphicon-shopping-cart">&nbsp;&nbsp;Start Shopping!</span></a>
        </div>
    </div>
</div>

<script type="text/javascript">

(function ($) {
        var $window = $(window),
            $html = $('#parentPrivacy');

        function resize() {
            if ($window.width() > 600) {
                return $html.addClass('center_div');
            }

            $html.removeClass('center_div');
        }

        $window
            .resize(resize)
            .trigger('resize');
})(jQuery);

</script>