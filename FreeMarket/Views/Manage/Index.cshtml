                </td>
            </tr>
            <tr>
                <td>
                    <div class="text-center">
                        @Html.ActionLink("Change Delivery Information", "ModifyDeliveryDetails", null, new { @class = "freemarket-link" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="text-center">
                        @Html.ActionLink("View Order History", "ViewOrderHistory", null, new { @class = "freemarket-link" })
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="text-center">
    @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-primary" })
