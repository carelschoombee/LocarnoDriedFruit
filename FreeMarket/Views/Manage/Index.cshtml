@model FreeMarket.Models.IndexViewModel
@{
    ViewBag.Title = "My Account";
}

<br />
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div id="parent" class="container">

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="row well well-modal">
        <div>
            <h4 class="text-center">Manage Account</h4>
        </div>

        <table class="table table-bordered-custom table-responsive">
            <tr>
                <td>
                    <div class="text-center">
                        @Model.ConfirmedEmail
                        @if (!String.IsNullOrWhiteSpace(Model.UnConfirmedEmail))
                        {
                            <em> - Unconfirmed: @Model.UnConfirmedEmail </em> @Html.ActionLink("Cancel", "CancelUnconfirmedEmail", new { emailOrUserId = Model.ConfirmedEmail })
                        }
                        else
                        {
                            <div>
                                 @Html.ActionLink("Change Email", "ChangeEmail", null, new { @class = "freemarket-link" })
                            </div>
                        }
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="text-center">
                        @if (Model.HasPassword)
                        {
                            @Html.ActionLink("Modify Password", "ChangePassword", null, new { @class = "freemarket-link" })
                        }
                        else
                        {
                            @Html.ActionLink("Create Password", "SetPassword")
                        }
                    </div>
                </td>
            </tr>
        </table>

    </div>
