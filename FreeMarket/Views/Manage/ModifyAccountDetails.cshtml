@model FreeMarket.Models.ModifyAccountDetailsViewModel

@{
    ViewBag.Title = "Modify Your Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div id="parentDetails" class="container center_div well well-modal">

@using (Html.BeginForm("ModifyAccountDetails", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "registerForm" }))
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Partial("_ModifyCustomerPartial")

    <hr />

    <div class="form-group">
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Update" />
            @Html.ActionLink("Back", "Index", "Manage", new { @class = "btn btn-primary" })
        </div>
    </div>

}

</div>

<script type="text/javascript">

(function ($) {
        var $window = $(window),
            $html = $('#parentDetails');

        function resize() {
            if ($window.width() > 600) {
                return $html.addClass('center_div');
            }

            $html.removeClass('center_div');
        }

        $window
            .resize(resize)
            .trigger('resize');
})(jQuery);

</script>

@Html.Partial("_ValidateModifyAccountDetailsPartial")

