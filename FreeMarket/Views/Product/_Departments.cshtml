@using FreeMarket.Models
@model List<Department>

@helper ListDepartment(int i)
{
    <div>
        <table class="table table-bordered-custom-product table-responsive well">
            <tr>
                <td class="text-center" colspan="2">
                    @if (Model[i].SecondaryImageNumber != 0)
                    {
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Carousel indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                            </ol>

                            <!-- Wrapper for carousel items -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img width="256" height="192" class="img-thumbnail img-responsive" src="@Url.Action("RenderDepartmentImage", "Image", new { id = Model[i].MainImageNumber})" alt="@Model[i].DepartmentName" title="@Model[i].DepartmentName" />
                                </div>
                                <div class="item">
                                    <img width="256" height="192" class="img-thumbnail img-responsive" src="@Url.Action("RenderDepartmentImage", "Image", new { id = Model[i].SecondaryImageNumber})" alt="@Model[i].DepartmentName" title="@Model[i].DepartmentName" />
                                </div>
                            </div>

                            <!-- Carousel controls -->
                            <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    }
                    else
                    {
                        <img width="256" height="192" class="img-thumbnail img-responsive" src="@Url.Action("RenderDepartmentImage", "Image", new { id = Model[i].MainImageNumber})" alt="@Model[i].DepartmentName" title="@Model[i].DepartmentName" />
                    }
                </td>
            </tr>
            <tr>
                <td class="text-center" colspan="2">
                    <div style="font-size: 24px; color:white"><i><strong>@Model[i].DepartmentName (@Model[i].ItemsInDepartment)</strong></i></div>
                </td>
            </tr>

            <tr>
                <td class="text-center" colspan="2">
                    <a href="@Url.Action("View", "Product")/@Model[i].DepartmentNumber"
                       class="btn btn-success editClass"><span class="glyphicon glyphicon-ok-circle" aria-hidden="true">&nbsp;&nbsp;View Products</span></a>
                </td>
            </tr>

        </table>
    </div>
}

<br />

<div class="container">

    <div class="col-sm-12">
        @if (Model.Count == 1)
        {
            <div class="row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">
                    @ListDepartment(0)
                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                </div>
            </div>
        }
        else if (Model.Count == 2)
        {
            <div class="row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    @ListDepartment(0)
                </div>

                <div class="col-sm-4">
                    @ListDepartment(1)
                </div>
                <div class="col-sm-2">

                </div>
            </div>
        }
        else if (Model.Count == 3)
        {
            <div class="row">
                <div class="col-sm-4">
                    @ListDepartment(0)
                </div>
                <div class="col-sm-4">
                    @ListDepartment(1)
                </div>
                <div class="col-sm-4">
                    @ListDepartment(2)
                </div>
            </div>
        }
        else
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <div class="row">
                    @if (i < Model.Count)
                    {
                        <div class="col-sm-3">
                            @ListDepartment(i)
                        </div>
                    }
                    @if (++i < Model.Count)
                    {
                        <div class="col-sm-3">
                            @ListDepartment(i)
                        </div>
                    }
                    @if (++i < Model.Count)
                    {
                        <div class="col-sm-3">
                            @ListDepartment(i)
                        </div>
                    }
                    @if (++i < Model.Count)
                    {
                        <div class="col-sm-3">
                            @ListDepartment(i)
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>

<div id="loadingDiv" style="display:none;"></div>
